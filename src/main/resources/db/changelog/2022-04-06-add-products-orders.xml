<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet author="junior-программист" id="add-products-and_orders">

        <!--Таблица "продукты"-->
        <createTable tableName="products">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="productsPK"/>
            </column>
            <column name="product_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="varchar(255)"/>
            <column name="price" type="double"/>
        </createTable>

        <!--Таблица "заказы"-->
        <createTable tableName="orders">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="ordersPK"/>
            </column>
            <column name="order_date" type="date"/>
            <column name="delivery_date" type="date"/>
            <column name="status" type="varchar(255)"/>
            <column name="customer_id" type="bigint"/>
        </createTable>

        <!--Ограничения-внешнй ключ-->
        <addForeignKeyConstraint baseTableName="orders" baseColumnNames="customer_id"
                                 constraintName="orders_customers_id_customer_id"
                                 deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedTableName="customers" referencedColumnNames="id"/>
    </changeSet>

    <changeSet author="junior-программист" id="add-orders_products_rel">

        <!--Таблица "звязь продуктов и заказов"-->
        <createTable tableName="orders_products_rel">
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!--Ограничения-внешние ключи-->
        <addForeignKeyConstraint baseColumnNames="order_id" baseTableName="orders_products_rel"
                                 constraintName="FK_orders" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="orders"/>
        <addForeignKeyConstraint baseColumnNames="product_id" baseTableName="orders_products_rel"
                                 constraintName="FK_products" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id"
                                 referencedTableName="products"/>
    </changeSet>

</databaseChangeLog>
